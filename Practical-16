import React, { useState, useCallback } from 'react';

// --- Task 1: StudentCard Component ---
// A functional component to display student information.
const StudentCard = ({ name, course, score }) => {
  return (
    <div className="p-4 bg-white shadow-xl rounded-xl transition duration-300 hover:shadow-2xl border border-blue-100 w-full sm:w-64">
      <h3 className="text-xl font-semibold text-blue-800 mb-2">{name}</h3>
      <p className="text-sm text-gray-600">
        <span className="font-medium text-gray-700">Course:</span> {course}
      </p>
      <p className="text-sm text-gray-600">
        <span className="font-medium text-gray-700">Score:</span>{' '}
        <span className={`font-bold ${score >= 90 ? 'text-green-600' : score >= 75 ? 'text-yellow-600' : 'text-red-600'}`}>
          {score}%
        </span>
      </p>
    </div>
  );
};

// --- Task 2: SimpleForm Component with Gemini Integration ---
const SimpleForm = () => {
  // State 1: Holds the current value of the text input
  const [inputValue, setInputValue] = useState('');
  // State 2: Holds the text to display after the form is submitted
  const [submittedText, setSubmittedText] = useState(null);
  
  // State 3: Holds the result from the Gemini API
  const [geminiResult, setGeminiResult] = useState(null);
  // State 4: Tracks if the API call is in progress
  const [isLoading, setIsLoading] = useState(false);

  // Gemini API call function, wrapped in useCallback for stability
  const callGeminiApi = useCallback(async (text) => {
    setIsLoading(true);
    setGeminiResult(null); // Clear previous result

    const apiKey = ""; // Provided by the environment
    const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

    // System instruction guiding the model's behavior
    const systemPrompt = "You are a helpful text assistant. Analyze the user's input. If it is a simple sentence, correct its grammar and suggest one way to make it more professional. If it is a paragraph or longer, summarize it concisely in one sentence.";

    const payload = {
        contents: [{ parts: [{ text: text }] }],
        systemInstruction: {
            parts: [{ text: systemPrompt }]
        },
    };

    let attempt = 0;
    const maxRetries = 5;
    let response;

    while (attempt < maxRetries) {
        try {
            response = await fetch(apiUrl, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            if (response.ok) {
                const result = await response.json();
                const generatedText = result.candidates?.[0]?.content?.parts?.[0]?.text;
                setGeminiResult(generatedText || "Could not process text. Please try again.");
                break;
            } else if (response.status === 429 && attempt < maxRetries - 1) {
                // Exponential backoff for rate limiting
                const delay = Math.pow(2, attempt) * 1000 + Math.random() * 1000;
                await new Promise(resolve => setTimeout(resolve, delay));
                attempt++;
            } else {
                setGeminiResult(`API Error: ${response.status} - ${response.statusText}`);
                break;
            }
        } catch (error) {
            if (attempt < maxRetries - 1) {
                const delay = Math.pow(2, attempt) * 1000 + Math.random() * 1000;
                await new Promise(resolve => setTimeout(resolve, delay));
                attempt++;
            } else {
                setGeminiResult(`Network Error: ${error.message}`);
                break;
            }
        }
    }
    setIsLoading(false);
  }, []);

  // Handler for input changes (updates inputValue state)
  const handleChange = (event) => {
    setInputValue(event.target.value);
  };

  // Handler for form submission
  const handleSubmit = (event) => {
    event.preventDefault();
    // Update the submittedText state with the current input value
    setSubmittedText(inputValue);
    // Clear previous AI result and input
    setGeminiResult(null); 
    setInputValue('');
  };

  return (
    <div className="p-8 bg-white shadow-2xl rounded-2xl w-full max-w-lg border border-gray-200">
      <h2 className="text-2xl font-bold text-gray-900 mb-6 border-b pb-3">
        Simple Form & AI Text Tool
      </h2>

      <form onSubmit={handleSubmit} className="space-y-4">
        <label htmlFor="simple-input" className="block text-sm font-medium text-gray-700">
          Type a sentence or a paragraph:
        </label>
        <input
          id="simple-input"
          type="text"
          value={inputValue} // Controlled component: input value is driven by state
          onChange={handleChange} // Update state on every keystroke
          placeholder="Enter text here..."
          className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-150"
        />
        <button
          type="submit"
          disabled={!inputValue.trim()} // Disable button if input is empty
          className="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed transition duration-150"
        >
          Submit Text
        </button>
      </form>

      {/* Conditional rendering of the result message */}
      {submittedText !== null && (
        <div className="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <p className="text-blue-800 font-medium">
            You typed: <span className="font-bold text-gray-900 break-words">{submittedText}</span>
          </p>

          {/* New Gemini Integration Button */}
          <div className="mt-4 pt-4 border-t border-gray-100">
            <button
              onClick={() => callGeminiApi(submittedText)}
              disabled={isLoading}
              className="w-full px-4 py-2 bg-purple-600 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 disabled:opacity-50 transition duration-150 flex items-center justify-center space-x-2"
            >
              {isLoading ? (
                <svg className="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                  <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              ) : (
                <>
                  <span>✨ Get AI Suggestion / Summary</span>
                </>
              )}
            </button>
          </div>
        </div>
      )}

      {/* Display Gemini Result */}
      {geminiResult && (
        <div className="mt-4 p-4 bg-purple-50 border border-purple-200 rounded-lg shadow-inner">
          <h4 className="text-purple-800 font-bold mb-2">
            ✨ AI Analysis
          </h4>
          <p className="text-gray-700 break-words whitespace-pre-wrap">
            {geminiResult}
          </p>
        </div>
      )}
    </div>
  );
};

// --- Main Application Component ---
export default function App() {
  return (
    <div className="min-h-screen bg-gray-50 p-6 sm:p-10 font-sans">
      <h1 className="text-4xl font-extrabold text-center text-gray-800 mb-10">
        React Components & LLM Demo
      </h1>

      {/* Displaying Student Cards (Task 1) */}
      <section className="mb-12">
        <h2 className="text-3xl font-bold text-gray-700 mb-6 text-center">
          1. Student Cards
        </h2>
        <div className="flex flex-wrap justify-center gap-6">
          {/* Updated Student Data */}
          <StudentCard name="Asmi" course="Digital Marketing" score={95} />
          <StudentCard name="Ishan" course="Data Structures" score={88} />
          <StudentCard name="Priya Sharma" course="Software Engineering" score={79} />
        </div>
      </section>

      {/* Displaying Simple Form (Task 2) */}
      <section className="flex justify-center">
        <h2 className="sr-only">2. Simple Form</h2>
        <SimpleForm />
      </section>
    </div>
  );
}
